{
  "$ref": "#/definitions/Recipe",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Category": {
      "enum": [
        "Chicken",
        "Meat",
        "Fish",
        "Pasta",
        "Salads",
        "Vegetarian",
        "Vegan",
        "Soups",
        "Snacks",
        "Desserts",
        "Other"
      ],
      "type": "string"
    },
    "Ingredient": {
      "additionalProperties": false,
      "properties": {
        "measure": {
          "$ref": "#/definitions/Measure"
        },
        "name": {
          "type": "string"
        },
        "quantity": {
          "type": ["string", "number"]
        }
      },
      "required": ["name", "quantity", "measure"],
      "type": "object"
    },
    "Measure": {
      "enum": ["qty", "g", "ml", "tsp", "tbsp", "handful", "cup", "slice(s)", "kg"],
      "type": "string"
    },
    "Metadata": {
      "additionalProperties": false,
      "properties": {
        "focused": {
          "type": "boolean"
        },
        "published": {
          "type": "boolean"
        }
      },
      "required": ["focused", "published"],
      "type": "object"
    },
    "Nutrition": {
      "additionalProperties": false,
      "properties": {
        "carbs": {
          "type": "string"
        },
        "fat": {
          "type": "string"
        },
        "protein": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "Recipe": {
      "additionalProperties": false,
      "properties": {
        "categories": {
          "items": {
            "$ref": "#/definitions/Category"
          },
          "type": "array"
        },
        "cookingTime": {
          "type": "string"
        },
        "imgSrc": {
          "type": "string"
        },
        "ingredients": {
          "items": {
            "$ref": "#/definitions/Ingredient"
          },
          "type": "array"
        },
        "metadata": {
          "$ref": "#/definitions/Metadata"
        },
        "nutrition": {
          "$ref": "#/definitions/Nutrition"
        },
        "prepTime": {
          "type": "string"
        },
        "ratings": {
          "items": {
            "type": "number"
          },
          "type": "array"
        },
        "servings": {
          "type": "number"
        },
        "steps": {
          "items": {
            "$ref": "#/definitions/Step"
          },
          "type": "array"
        },
        "story": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "youWillNeed": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "imgSrc",
        "title",
        "story",
        "categories",
        "ingredients",
        "steps",
        "metadata",
        "ratings",
        "cookingTime",
        "prepTime",
        "youWillNeed",
        "servings",
        "nutrition"
      ],
      "type": "object"
    },
    "Step": {
      "additionalProperties": false,
      "properties": {
        "imgSrc": {
          "type": "string"
        },
        "step": {
          "type": "string"
        }
      },
      "required": ["step"],
      "type": "object"
    }
  }
}
